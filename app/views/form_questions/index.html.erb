<p id="notice"><%= notice %></p>

<h1>Form Questions</h1>

<table>
  <thead>
    <tr>
      <th>Name form question</th>
      <th>Subject form question</th>
      <th>Content form question</th>
      <th>Image form question</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @form_questions.each do |form_question| %>
      <tr>
        <td><%= form_question.name_form_question %></td>
        <td><%= form_question.subject_form_question %></td>
        <td><%= form_question.content_form_question %></td>
        <td><%= form_question.image_form_question %></td>
        <td><%= form_question.user_id %></td>
        <td><%= link_to 'Show', form_question %></td>
        <td><%= link_to 'Edit', edit_form_question_path(form_question) %></td>
        <td><%= link_to 'Destroy', form_question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

