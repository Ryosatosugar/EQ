<%= form_with(model: form_answer) do |form| %>
  <% if form_answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form_answer.errors.count, "error") %> prohibited this form_answer from being saved:</h2>

      <ul>
        <% form_answer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <% if user_signed_in? %>
      <%= form.text_field :user_id, value: current_user.id %>
    <% else %>
      <%= form.text_field :user_id %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :form_question_id %>
    <%= form.text_field :form_question_id, value: params[:form_question_id] %>
  </div>

  <div class="field">
    <%= form.label :name_form_answer %>
    <%= form.text_field :name_form_answer %>
  </div>

  <div class="field">
    <%= form.label :content_form_answer %>
    <%= form.text_area :content_form_answer %>
  </div>

  <div class="field">
    <%= form.label :image_form_answer %>
    <%= form.text_field :image_form_answer %>
  </div>

  <div class="field">
    <%= form.label :best_answer_form_answer %>
    <%= form.check_box :best_answer_form_answer %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
