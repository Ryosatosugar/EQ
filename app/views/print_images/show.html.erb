
<div class="container mt-4">
  <!-- 通知 -->
  <p id="notice" class="alert alert-info"><%= notice %></p>

  <!-- Print Imageの詳細カード -->
  <div class="card shadow">
    <div class="card-body">
      <!-- 画像の表示 -->
      <div class="row text-center mb-3">
        <% if @print_image.image_for_download.present? %>
          <% @print_image.image_for_download.each do |image| %>
            <div class="col-md-2 col-sm-3 col-4 mb-2">
              <%= image_tag image.url, class: "img-thumbnail", style: "max-width: 100%; max-height: 150px;" %>
            </div>
          <% end %>
        <% else %>
          <div class="col-12">
            <img src="http://placehold.jp/150x150" class="img-thumbnail" alt="No Image">
          </div>
        <% end %>
      </div>

      <!-- Title情報 -->
      <p>
        <strong>タイトル:</strong>
        <%= @print_image.title %>
      </p>

      <!-- User情報 -->
      <p>
        <strong>ユーザー:</strong>
        <%= @print_image.user_id %>
      </p>

      <!-- Category情報 -->
      <p>
        <strong>カテゴリー:</strong>
        <%= @print_image.category_id %>
      </p>

      <!-- Event情報 -->
      <p>
        <strong>イベント:</strong>
        <%= @print_image.event_id %>
      </p>

      <!-- Explanation情報 -->
      <p>
        <strong>説明文:</strong>
        <%= @print_image.explanation %>
      </p>

      <!-- ボタン -->
      <div class="text-center mt-4">
        <%= link_to '編集する', edit_print_image_path(@print_image), class: "btn btn-warning btn-sm mr-2" %>
        <%= link_to '戻る', print_images_path, class: "btn btn-secondary btn-sm" %>
      </div>
    </div>
  </div>
</div>
