
アドミン用


<div class="container mt-4">
  <p id="notice" class="alert alert-info"><%= notice %></p>

  <h1 class="mb-4 text-center">Admin用のPrint Images Indexページ</h1>

  <table class="table table-bordered table-hover">
    <thead class="thead-light">
      <tr>
        <th>Image</th>
        <th>User</th>
        <th>Category</th>
        <th>Event</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @print_images.each do |print_image| %>
        <tr>
          <!-- Image -->
          <td class="text-center">
            <% if print_image.thumbnail_image.present? %>
              <%= image_tag print_image.thumbnail_image, class: "img-thumbnail", style: "max-width: 150px; max-height: 150px;" %>
            <% else %>
              <img src="http://placehold.jp/150x150" class="img-thumbnail" alt="No Image">
            <% end %>
          </td>
          
          <!-- User, Category, Event -->
          <td class="text-center"><%= print_image.user_id %></td>
          <td class="text-center"><%= print_image.category_id %></td>
          <td class="text-center"><%= print_image.event_id %></td>

          <!-- Actions -->
          <td class="text-center">
            <%= link_to 'Show', print_image, class: "btn btn-primary btn-sm" %>
          </td>
          <td class="text-center">
            <%= link_to 'Edit', edit_print_image_path(print_image), class: "btn btn-warning btn-sm" %>
          </td>
          <td class="text-center">
            <%= link_to 'Destroy', print_image, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Add New Button -->
  <div class="text-center mt-4">
    <%= link_to '新しく追加する', new_print_image_path, class: "btn btn-success btn-lg" %>
  </div>
</div>
