


<div class="container mt-4">
  <% if notice.present? %>
    <p id="notice" class="alert alert-info text-center"><%= notice %></p>
  <% end %>

  <h1 class="mb-4 text-center">Admin用のPrint Images Indexページ</h1>

  <div class="table-responsive">
    <table class="table table-bordered table-hover table-sm">
      <thead class="thead-light text-center">
        <tr>
          <th>Image</th>
          <th>User</th>
          <th>Category</th>
          <th>Event</th>
          <th>Title</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @print_images.each do |print_image| %>
          <tr>
            <!-- Image -->
            <td class="text-center align-middle">
              <% if print_image.thumbnail_image.present? %>
                <%= image_tag print_image.thumbnail_image, class: "img-thumbnail", style: "max-width: 150px; max-height: 150px;" %>
              <% else %>
                <img src="http://placehold.jp/150x150" class="img-thumbnail" alt="No Image">
              <% end %>
            </td>

            <!-- User, Category, Event, Title -->
            <td class="text-center align-middle"><%= print_image.user_id %></td>
            <td class="text-center align-middle"><%= print_image.category_id %></td>
            <td class="text-center align-middle"><%= print_image.event_id %></td>
            <td class="text-center align-middle"><%= print_image.title %></td>

            <!-- Actions -->
            <td class="text-center align-middle">
              <%= link_to 'Show', print_image, class: "btn btn-primary btn-sm" %>
            </td>
            <td class="text-center align-middle">
              <%= link_to 'Edit', edit_print_image_path(print_image), class: "btn btn-warning btn-sm" %>
            </td>
            <td class="text-center align-middle">
              <%= button_to 'Destroy', print_image, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Add New Button -->
  <div class="text-center mt-4">
    <%= link_to '新しく追加する', new_print_image_path, class: "btn btn-success btn-lg shadow" %>
  </div>
</div>

